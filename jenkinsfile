pipeline {
    // Directives
    agent any

    environment {
        NODE_VERSION = '20.10.0'  // Update this to the version your project requires
        NPM_VERSION = '10.2.3'
    }

    stages {
        stage('build') {
            steps {
                 // Install NVM
                    sh 'curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash'
                    sh 'export NVM_DIR="$HOME/.nvm"'
                    sh '[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"'
                    sh '[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"'

                    // Install and use the specified Node.js version
                    sh "nvm install ${NODE_VERSION}"
                    sh "nvm use ${NODE_VERSION}"
                // Remove existing node_modules directory
                sh 'rm -rf node_modules'

                // Run npm audit fix with force option
                sh 'npm audit fix --force'

                // Install project dependencies
                sh 'npm install'

                // Run npm audit fix again
                sh 'npm audit fix --force'
                sh 'npm update'

                // Echo success message
                echo 'Build success'
                sh 'npm run dev'
                
            }
        }

        stage('test') {
            steps {
                // Run npm run dev for testing
                // sh 'npm run dev'

                // Echo success message
                echo 'Test success'
            }
        }

        stage('deploy') {
            steps {
                echo "deploy success"
            }
        }

    }
}








