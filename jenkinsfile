pipeline{
    //Directives
   agent any
    stages {

        stage('build'){
            steps{
                sh 'rm -rf node_modules'
                sh 'npm install 20'
                sh 'npm audit'
                sh 'npm audit fix --force'
                sh 'npm test'

                echo 'success'
            }
        }

        stage ('test'){

            steps{
                 
                 echo 'success'
            }
        }

        stage ('deploy'){

            steps {
                 echo "deploying"
            }
        } 

    }

}