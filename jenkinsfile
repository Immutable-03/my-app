pipeline{
    //Directives
   agent any
    stages {

        stage('build'){
            steps{
                sh 'rm -rf node_modules'
                sh 'npm audit fix'
                sh 'npm install 20'

                echo 'success'
            }
        }

        stage ('test'){

            steps{
                 sh 'npm run dev'
                 echo 'success'
            }
        }

        stage ('deploy'){

            steps {
                 echo "deploying"
            }
        } 

    }

}