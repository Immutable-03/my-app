pipeline {
    agent any

    environment {
        NODE_VERSION = '20'  // Update this to the version your project requires
    }

    stages {
        stage('Install and Build') {
            steps {
                 sh 'rm -rf node_modules'
                 sh 'npm audit fix --force'
                 sh 'npm install 20'
                 sh 'npm audit fix --force'
                 echo 'success'
            }
        }

        stage ('test'){

            steps{
                 sh 'npm run dev'
                 echo 'success'
            }
        }
    }
}










