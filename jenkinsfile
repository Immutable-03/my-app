pipeline {
    // Directives
    agent any

    environment {
        NODE_VERSION = '20.10.0'  // Update this to the version your project requires
        NPM_VERSION = '10.2.3'
    }

    stages {
        stage('build') {
            steps {
                // Remove existing node_modules directory
                sh 'rm -rf node_modules'

                // Run npm audit fix with force option
                sh 'npm audit fix --force'

                // Install project dependencies
                sh 'npm install'
                sh "npm install Next.js 13.5.2"

                // Run npm audit fix again
                sh 'npm audit fix --force'

                // Echo success message
                echo 'Build success'
                sh 'npm run dev'
            }
        }

        stage('test') {
            steps {
                // Run npm run dev for testing
                // sh 'npm run dev'

                // Echo success message
                echo 'Test success'
            }
        }

        stage('deploy') {
            steps {
                echo "deploy success"
            }
        }

    }
}








